<map proto="1.4.2">
<name>Pharaohs Of Egypt</name>
<version>1.0.0</version>
<objective>Destroy the enemy's two Gold monuments!</objective>
<created>2024-05-07</created>
<gamemode>dtm</gamemode>
<!-- Map Author & Contributor -->
<authors>
    <author uuid="571c1d9d-4d49-43bd-bfdb-30563e920ca9"/> <!-- Wesdial -->
</authors>
<contributors>
    <contributor uuid="3fa22f5e-098d-49f7-b9ad-92566f045cbc"/> <!-- BigTonyMC -->
</contributors>
<!-- Broadcasts -->
<broadcasts>
    <tip after="1s" every="4m"> Iron blocks can be found inside the `esphinxes `rlocated at your spawn</tip> 
    <tip after="2s" every="4m1s">Iron blocks regenerate on this map!</tip>
    <alert after="11m31s">All remaining monuments will change to Redstone block in `c30 `rseconds!</alert>
    <alert after="11m58s">All remaining monuments will change to Redstone block in `c3 `rseconds!</alert>
    <alert after="11m59s">All remaining monuments will change to Redstone block in `c2 `rseconds!</alert>
    <alert after="12m">All remaining monuments will change to Redstone block in `c1 `rsecond!</alert>
    <alert after="23m31s">All remaining monuments will change to Packed ice in `c30 `rseconds!</alert>
    <alert after="23m58s">All remaining monuments will change to Packed ice in `c3 `rseconds!</alert>
    <alert after="23m59s">All remaining monuments will change to Packed ice in `c2 `rseconds!</alert>
    <alert after="24m">All remaining monuments will change to Packed ice in `c1 `rsecond!</alert>
</broadcasts>
<!-- Teams -->
<teams>
    <team id="red-team" color="dark red" max="10">Red</team>
    <team id="blue-team" color="blue" max="10">Blue</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="main-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" unbreakable="true" material="stone pickaxe" enchantment="dig speed"/>
        <item slot="3" unbreakable="true" material="stone axe"/>
        <item slot="5" amount="64" material="wood"/>
        <item slot="6" material="golden apple"/>
        <item slot="7" amount="24" material="arrow"/>
        <item slot="8" amount="64" material="golden carrot"/>
        <item slot="27" unbreakable="true" material="stone spade"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" material="leather chestplate"/>
        <leggings unbreakable="true" team-color="true" material="chainmail leggings"/>
        <boots unbreakable="true" team-color="true" material="chainmail boots"/>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <default>
        <regions>
            <point>43.5,13,0.5</point>
        </regions>
    </default>
    <spawn team="blue-team" kit="main-kit">
        <regions>
            <point yaw="-90">-26.5,15,0.5</point>
        </regions>
    </spawn>
    <spawn team="red-team" kit="main-kit">
        <regions>
            <point yaw="90">113,15,0.5</point>
        </regions>
    </spawn>
</spawns>
<!-- Monuments -->
<destroyables owner="blue-team" repairable="false" mode-changes="true">
     <destroyable name="Left Monument" region="blue-left" materials="gold block"/>
    <destroyable name="Right Monument" region="blue-right" materials="gold block"/>
</destroyables>
    <destroyables owner="red-team" repairable="false" mode-changes="true">
    <destroyable name="Left Monument" region="red-left" materials="gold block"/>
    <destroyable name="Right Monument" region="red-right" materials="gold block"/>
</destroyables>
<!-- Monument Modes -->
<modes>
    <mode after="12m" material="redstone block"/>
    <mode after="24m" material="packed ice"/>
</modes>
<!-- Renewables -->
<renewables>
    <renewable interval="10s" grow="true" sound="false" region="iron-spawners" renew-filter="only-iron"/>
</renewables>
<!-- Filters -->
<filters>
    <team id="only-red">red-team</team>
    <team id="only-blue">blue-team</team>
    <not id="no-void">
		<void/>
	</not>
    <all id="only-iron-regen">
        <cause>world</cause>
    </all>
    <deny id="enchanting-table">
        <material>enchantment table</material>
    </deny>
    <deny id="no-door">
        <material>194</material>
    </deny>
    <material id="only-iron">iron block</material>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="spawn-protections">
        <rectangle id="red-spawn-protection" min="88,17" max="125,-17"/>
        <rectangle id="blue-spawn-protection" min="-2,-17" max="-39,17"/>
    </union>
    <union id="iron-spawners">
        <cuboid id="blue-iron-spawn" min="-17,11,-17" max="-1,18,17"/>
        <cuboid id="red-iron-spawn" min="103,11,17" max="88,18,-17"/>
    </union>
    <union id="monuments">
        <cuboid id="blue-left" min="-28,12,38" max="-32,16,42"/>
        <cuboid id="blue-right" min="-28,12,-44" max="-32,16,-40"/>
        <cuboid id="red-left" min="114,12,-38" max="118,16,-42"/>
        <cuboid id="red-right" min="114,12,44" max="118,16,40"/>
    </union>
    <!-- Applications -->
    <apply region="iron-spawners" block-break="only-iron" block-place="only-iron-regen" message="You may only modify iron blocks in spawn!"/>
    <apply region="spawn-protections" block="never" message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="only-blue" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection" enter="only-red" message="You may not enter the enemy spawn."/>
    <apply region="everywhere" block-place="no-void" message="You are not allowed to modify the void!"/> <!-- uses block 36 -->
    <apply region="everywhere" block-break="enchanting-table" message="You are not allowed to destroy the enchantment table!"/>
    <apply region="everywhere" use="no-door"/>
</regions>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="4" material="arrow"/>
        <item material="golden apple"/>
        <item amount="16" material="wood"/>
    </kill-reward>
</kill-rewards>
<!-- Block Drops -->
<block-drops>
    <rule wrong-tool="true">
        <filter>
            <material>iron block</material>
        </filter>
        <drops>
            <item amount="4" material="iron ingot"/>
        </drops>
    </rule>
</block-drops>
<crafting> 
    <disable>iron pickaxe</disable>    
</crafting> 
<!-- Item Rules -->
<item-mods>
    <rule>
        <match>
            <material>iron sword</material>
            <material>iron axe</material>
            <material>iron spade</material>
            <material>iron helmet</material>
            <material>iron chestplate</material>
            <material>iron leggings</material>
            <material>iron boots</material>
        </match>
        <modify unbreakable="true"/>
    </rule>
</item-mods>
<!-- Item Remove -->
<itemremove>
    <item>golden carrot</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>chainmail boots</item>
    <item>sapling</item>
    <item>gold block</item>
    <item>sand</item>
    <item>sand:1</item>
    <item>sandstone</item>
    <item>sandstone:1</item>
    <item>sandstone:2</item>
    <item>red sandstone</item>
    <item>red sandstone:1</item>
    <item>red sandstone:2</item>
</itemremove>
<!-- Item keep -->
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
    <item>wood</item>
</itemkeep>
<!-- Tool Repair -->
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>stone pickaxe</tool>
    <tool>stone axe</tool>
    <tool>stone spade</tool>
</toolrepair>
<!-- Misc -->
<maxbuildheight>30</maxbuildheight>
</map>