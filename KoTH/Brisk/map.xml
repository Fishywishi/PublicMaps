<map proto="1.5.0">
<name>Brisk</name>
<version>1.3.0</version>
<include id="gapple-kill-reward"/>
<objective>Get the most points by holding the hill!</objective>
<created>2014-07-04</created>
<gamemode>koth</gamemode>
<authors>
    <author uuid="f690a591-348b-482e-a18d-7779d0c0a28c"/> <!-- minimitch0199 -->
</authors>
<contributors>
    <contributor uuid="ba4a93aa-4935-4a71-bab2-a58f9a124e7b" contribution="XML"/> <!-- ItsMiiOlly -->
</contributors>
<rules>
    <rule>Fall damage is disabled!</rule>
</rules>
<teams>
    <team id="red-team" color="dark red" max="10" max-overfill="15">Red</team>
    <team id="blue-team" color="blue" max="10" max-overfill="15">Blue</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="spawn-kit" force="true">
        <clear/>
        <item unbreakable="true" slot="0">stone sword</item>
        <item unbreakable="true" slot="1">bow</item>
        <item slot="2" amount="6" damage="1">leaves</item>
        <item slot="3">golden apple</item>
        <item slot="8" amount="32">arrow</item>
        <helmet unbreakable="true" team-color="true" locked="true">leather helmet</helmet>
        <chestplate unbreakable="true" team-color="true" locked="true">leather chestplate</chestplate>
        <leggings unbreakable="true" locked="true">iron leggings</leggings>
        <boots unbreakable="true" team-color="true" locked="true">leather boots</boots>
        <effect duration="3" amplifier="3">heal</effect>
        <effect duration="5" amplifier="3">damage resistance</effect>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="red-team" kit="spawn-kit" yaw="-90">
        <regions>
            <point yaw="-180">-42.5,33,0.5</point>
            <point yaw="0">-42.5,33,0.5</point>
        </regions>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit" yaw="90">
        <regions>
            <point yaw="-180">43.5,33,0.5</point>
            <point yaw="0">43.5,33,0.5</point>
        </regions>
    </spawn>
    <default yaw="90">
        <region>
            <cylinder base="38.5,21,0.5" radius="3" height="0"/>
        </region>
    </default>
</spawns>
<!-- Control Points -->
<control-points incremental="true" neutral-state="true" show-progress="true" required="false">
    <!-- Hill -->
    <control-point name="Hill" capture-time="10s" points="1">
        <capture>
            <cylinder base="0.5,20,0.5" radius="5.7" height="5" />
        </capture>
        <progress>
            <cylinder base="0.5,14,0.5" radius="7" height="6" />
        </progress>
        <captured>
            <cuboid min="0,0,0" max="0,0,0" />
        </captured>
    </control-point>
</control-points>
<!-- Score Limit -->
<score>
    <limit>500</limit>
</score>
<!-- Filters -->
<filters>
    <material id="only-leaves">leaves</material>
</filters>
<!-- Regions -->
<regions>
    <apply region="everywhere" block="only-leaves" message="You may only interact with leaves"/>
    <!--  left and right  -->
    <apply velocity="@0.0,2.1,0.5">
        <region>
            <cylinder base="0.5,8,-36.5" radius="1.2" height="1"/>
        </region>
    </apply>
    <apply velocity="@0.5,2,0.5">
        <region>
            <cylinder base="-18.5,6,-18.5" radius="1.2" height="1"/>
        </region>
    </apply>
    <apply velocity="@0.5,2,-0.5">
        <region>
            <cylinder base="-18.5,6,19.5" radius="1.2" height="1"/>
        </region>
    </apply>
    <apply velocity="@0,2.1,-0.5">
        <region>
            <cylinder base="0.5,8,37.5" radius="1.2" height="1"/>
        </region>
    </apply>
    <apply velocity="@-0.5,2,-0.5">
        <region>
            <cylinder base="19.5,6,19.5" radius="1.2" height="1"/>
        </region>
    </apply>
    <apply velocity="@-0.5,2,0.5">
        <region>
            <cylinder base="19.5,6,-18.5" radius="1.2" height="1"/>
        </region>
    </apply>
</regions>
<!-- Falling Blocks -->
<falling-blocks>
    <rule>
        <filter>
            <material>leaves</material>
        </filter>
        <sticky>
            <any>
                <material>stained clay:9</material>
                <material>quartz block</material>
                <material>double step:8</material>
            </any>
        </sticky>
    </rule>
</falling-blocks>
<itemremove>
    <item>leather chestplate</item>
    <item>leather helmet</item>
    <item>iron leggings</item>
    <item>leather boots</item>
    <item>apple</item>
    <item>sapling</item>
    <item>ladder</item>
</itemremove>
<toolrepair>
    <tool>bow</tool>
    <tool>stone sword</tool>
</toolrepair>
<itemkeep>
    <item>arrow</item>
    <item>golden apple</item>
    <item>leaves</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item amount="6">arrow</item>
        <item>golden apple</item>
        <filter>
            <kill-streak count="3"/>
        </filter>
        <item amount="3">leaves</item>
    </kill-reward>
</kill-rewards>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>