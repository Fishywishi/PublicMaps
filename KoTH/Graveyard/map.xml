<map proto="1.5.0">
<name>Graveyard</name>
<version>1.2.0</version>
<include id="gapple-kill-reward"/>
<objective>Take control of all three hills!</objective>
<gamemode>koth</gamemode>
<authors>
    <author uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06" contribution="Map idea and design, building"/> <!-- thestrangeboy1 -->
    <author uuid="ff4918fc-977d-4209-b3be-05ccc4f83d23" contribution="Building, XML"/> <!-- luigishadow2 -->
</authors>
<teams>
    <team id="red-team" color="dark red" max="24">Red</team>
    <team id="blue-team" color="blue" max="24">Blue</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="spawn-kit">
        <item unbreakable="true" slot="0">stone sword</item>
        <item unbreakable="true" slot="1" enchantment="arrow infinite:1">bow</item>
        <item slot="2">golden apple</item>
        <item slot="28" amount="1">arrow</item>
        <helmet unbreakable="true" team-color="true">leather helmet</helmet>
        <chestplate unbreakable="true">chainmail chestplate</chestplate>
        <leggings unbreakable="true" team-color="true">leather leggings</leggings>
        <boots unbreakable="true" enchantment="protection fall:2">iron boots</boots>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="spawn-kit" yaw="135">
        <region>
            <cylinder base="-1,86.5,163" radius="2" height="0"/>
        </region>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit" yaw="-45">
        <region>
            <cylinder base="-68,86.5,0" radius="2" height="0"/>
        </region>
    </spawn>
    <default yaw="-90">
        <region>
            <cuboid min="17,86,79" max="13,86,84"/>
        </region>
    </default>
</spawns>
<!-- Filters -->
<filters>
    <deny id="deny-beacons">
        <material>beacon</material>
    </deny>
</filters>
<!-- Regions -->
<regions>
    <apply region="everywhere" block="never" use="deny-beacons" message="You are not allowed to modify this map!"/>
</regions>
<!-- Tool Reapir -->
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<!-- Item Keep -->
<itemkeep>
    <item>arrow</item>
    <item>golden apple</item>
</itemkeep>
<!-- Item Remove -->
<itemremove>
    <item>leather helmet</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
</itemremove>
<killreward>
    <item>golden apple</item>
</killreward>
<!-- Control Points -->
<control-points incremental="true" neutral-state="true" show-progress="true" required="false">
    <!-- Middle Hill -->
    <control-point name="Middle" capture-time="15s" points="1">
        <capture>
            <cuboid min="-39,80,86" max="-31,76,78"/>
        </capture>
        <progress>
            <cuboid min="-39,80,86" max="-31,76,78"/>
        </progress>
        <captured>
            <cuboid min="-34,85,80" max="-37,87,83"/>
        </captured>
    </control-point>
    <!-- North Hill -->
    <control-point name="North Point" capture-time="10s" points="1">
        <capture>
            <cuboid min="-17,82,54" max="-8,86,45"/>
        </capture>
        <progress>
            <cuboid min="-17,82,54" max="-8,86,45"/>
        </progress>
        <captured>
            <point>-13,90,49</point>
        </captured>
    </control-point>
    <!-- South Hill -->
    <control-point name="South" capture-time="10s" points="1">
        <capture>
            <cuboid min="-53,81,110" max="-62,86,119"/>
        </capture>
        <progress>
            <cuboid min="-53,81,110" max="-62,86,119"/>
        </progress>
        <captured>
            <point>-58,90,114</point>
        </captured>
    </control-point>
</control-points>
<!-- Score Limit -->
<score>
    <limit>750</limit>
</score>
<!-- Misc -->
<hunger>
    <depletion>off</depletion>
</hunger>
</map>