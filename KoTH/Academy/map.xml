<map proto="1.5.0">
<name>Academy</name>
<version>1.1.0</version>
<include id="gapple-kill-reward"/>
<objective>Capture the bridge to accumulate points!</objective>
<gamemode>koth</gamemode>
<authors>
    <author uuid="e39fe3bc-b80e-46d2-81fe-d18042471989"/> <!-- EnarRikardz -->
    <author uuid="91295196-9cd2-4963-b7ec-afd1a110edbe"/> <!-- PandaBattalion -->
</authors>
<contributors>
    <contributor uuid="5c934a59-fd50-48aa-99ff-c87e0468f639" contribution="XML"/> <!-- iamramsey -->
</contributors>
<teams>
    <team id="red-team" color="dark red" max="8" max-overfill="12">Red</team>
    <team id="blue-team" color="blue" max="8" max-overfill="12">Blue</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="spawn-kit" force="true">
        <clear/>
        <item unbreakable="true" slot="0">stone sword</item>
        <item unbreakable="true" slot="1">bow</item>
        <item slot="2">golden apple</item>
        <item slot="3" amount="7">gold nugget</item>
        <item slot="8" amount="16">arrow</item>
        <helmet unbreakable="true" team-color="true">leather helmet</helmet>
        <chestplate unbreakable="true" team-color="true" enchantment="protection projectile:1">leather chestplate</chestplate>
        <leggings unbreakable="true">chainmail leggings</leggings>
        <boots unbreakable="true" team-color="true">leather boots</boots>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="red-team" kit="spawn-kit" yaw="90">
        <region>
            <cylinder base="59,21,-151" height="0" radius="1"/>
        </region>
    </spawn>
    <spawn team="blue-team" kit="spawn-kit" yaw="-90">
        <region>
            <cylinder base="23,21,-235" height="0" radius="1"/>
        </region>
    </spawn>
    <default angle="-3,52.5,-193">
        <region>
            <cylinder base="-5,52,-193" height="0" radius="1"/>
        </region>
    </default>
</spawns>
<!-- Control Points -->
<control-points incremental="true" neutral-state="true" show-progress="true" required="false">
    <!-- Hill -->
    <control-point name="Bridge" capture-time="10s" points="2">
        <capture>
            <complement>
                <cuboid min="37,22,-189" max="45,24,-197"/>
                <cuboid min="37,22,-197" max="38,24,-196"/>
                <cuboid min="44,22,-190" max="45,24,-189"/>
                <cuboid min="37,22,-189" max="38,24,-190"/>
                <cuboid min="44,22,-196" max="45,24,-197"/>
            </complement>
        </capture>
        <progress>
            <cuboid min="37,21,-197" max="45,22,-189"/>
        </progress>
        <captured>
            <cuboid min="36,22,-198" max="46,23,-188"/>
        </captured>
    </control-point>
</control-points>
<!-- Score Limit -->
<score>
    <limit>500</limit>
</score>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <cylinder id="red-spawn-protection" base="59,0,-151" height="oo" radius="10"/>
    <cylinder id="blue-spawn-protection" base="23,0,-235" height="oo" radius="10"/>
    <!-- Applications -->
    <apply region="red-spawn-protection" enter="red-team" message="You may not enter the enemy team's spawn!"/> 
    <apply region="blue-spawn-protection" enter="blue-team" message="You may not enter the enemy team's spawn!"/>
    <apply region="everywhere" block="never"/>
</regions>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="8">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Tool Repair -->
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<!-- Item Keep -->
<itemkeep>
    <item>arrow</item>
    <item>golden apple</item>
</itemkeep>
<!-- Item Remove -->
<itemremove>
    <item>potion</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
</itemremove>
<!-- Misc -->
<hunger>
    <depletion>off</depletion>
</hunger>
<timelock>on</timelock>
</map>