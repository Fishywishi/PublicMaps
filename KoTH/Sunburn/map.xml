<map proto="1.5.0">
<name>Sunburn</name>
<version>1.1.0</version>
<include id="gapple-kill-reward"/>
<objective>Control the Central Hill to win!</objective>
<gamemode>koth</gamemode>
<authors>
    <author uuid="c65e66b3-e932-4b33-b907-fe4916806076"/> <!-- Draco_Rogue -->
    <author uuid="130be12a-f3b9-4b7d-ad39-7b45e84d3d0f"/> <!-- Veiyl -->
</authors>
<teams>
    <team id="green-team" color="green" max="14" max-overfill="18">Green</team>
    <team id="blue-team" color="blue" max="14" max-overfill="18">Blue</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="spawn-kit" force="true">
        <clear/>
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2">golden apple</item>
        <item slot="8" amount="32">arrow</item>
        <helmet unbreakable="true" team-color="true">leather helmet</helmet>
        <chestplate unbreakable="true">gold chestplate</chestplate>
        <leggings unbreakable="true">gold leggings</leggings>
        <boots unbreakable="true" team-color="true">leather boots</boots>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="green-team" yaw="90" kit="spawn-kit">
        <region>
            <cuboid min="287,5,330" max="290,5,327"/>
        </region>
    </spawn>
    <spawn team="blue-team" yaw="-90" kit="spawn-kit">
        <region>
            <cuboid min="200,5,327" max="197,5,330"/>
        </region>
    </spawn>
    <default>
        <region>
            <cuboid min="242,6,383" max="245,6,386"/>
        </region>
    </default>
</spawns>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <rectangle id="green-spawn-protection" min="280,335" max="295,322"/>
    <rectangle id="blue-spawn-protection" min="207,322" max="192,335"/>
    <!-- Applications -->
    <apply region="green-spawn-protection" enter="green-team" message="You may not enter the enemy team's spawn!"/>
    <apply region="blue-spawn-protection" enter="blue-team" message="You may not enter the enemy team's spawn!"/>
    <apply region="everywhere" block="never" message="You may not modify the map!"/>
</regions>
<!-- Control Points -->
<control-points incremental="true" neutral-state="true" show-progress="true" required="false">
    <!-- Hill -->
    <control-point name="Central Hill" capture-time="15s" points="1">
        <capture>
            <cuboid min="240,8,332" max="247,10,325"/>
        </capture>
        <progress>
            <cuboid min="240,7,332" max="247,9,325"/>
        </progress>
        <captured>
            <cuboid min="252,0,337" max="235,256,320"/>
        </captured>
    </control-point>
</control-points>
<!-- Score Limit -->
<score>
    <limit>400</limit>
</score>
<timelock>on</timelock>
<kill-rewards>
    <kill-reward>
        <item amount="8">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Tool Repair -->
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<!-- Item Keep -->
<itemkeep>
    <item>arrow</item>
    <item>golden apple</item>
</itemkeep>
<!-- Item Remove -->
<itemremove>
    <item>leather helmet</item>
    <item>gold chestplate</item>
    <item>gold leggings</item>
    <item>leather boots</item>
</itemremove>
<!-- Misc -->
<hunger>
    <depletion>off</depletion>
</hunger>
</map>