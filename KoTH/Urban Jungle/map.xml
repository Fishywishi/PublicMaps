<map proto="1.5.0">
<name>Urban Jungle</name>
<version>1.1.0</version>
<include id="gapple-kill-reward"/>
<objective>Control the center until you have 500 points to win!</objective>
<gamemode>koth</gamemode>
<authors>
    <author uuid="ef4ea031-998f-4ec9-b7b6-1bdd428bcef8"/> <!-- Plastix -->
</authors>
<rules>
    <rule>Players have resistance and reduced knockback in spawn!</rule>
</rules>
<teams>
    <team id="red-team" color="dark red" max="24">Red</team>
    <team id="blue-team" color="blue" max="24">Blue</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="spawn-kit" force="true">
        <clear/>
        <item unbreakable="true" slot="0">stone sword</item>
        <item unbreakable="true" slot="1">bow</item>
        <item unbreakable="true" slot="2">stone pickaxe</item>
        <item unbreakable="true" slot="8" amount="64">arrow</item>
        <item unbreakable="true" slot="3" amount="64" team-color="true">stained glass</item>
        <item unbreakable="true" slot="4" amount="32">cooked beef</item>
        <item unbreakable="true" slot="5" amount="1" damage="8194">potion</item>
        <helmet unbreakable="true">gold helmet</helmet>
        <chestplate unbreakable="true" team-color="true">leather chestplate</chestplate>
        <leggings unbreakable="true" team-color="true">leather leggings</leggings>
        <boots unbreakable="true" team-color="true">leather boots</boots>
        <effect duration="3" amplifier="255">damage resistance</effect>
<!-- Spawns -->
<spawns>
    <spawn team="red-team" kit="spawn-kit" yaw="-90" region="red-spawn"/>
    <spawn team="blue-team" kit="spawn-kit" yaw="90" region="blue-spawn"/>
    <default yaw="180" region="obs-spawn"/>
</spawns>
<!-- Capture Points -->
<control-points required="false" capture-time="10s" neutral-state="true" show-progress="true" incremental="true">
    <control-point name="Hill">
        <capture>
            <region id="hill"/>
        </capture>
        <progress>
            <region id="hill-progess"/>
        </progress>
    </control-point>
</control-points>
<score>
    <limit>500</limit>
</score>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="spawn-protections">
        <rectangle id="red-spawn-protection" min="-38,-8" max="-52,-22"/>
        <rectangle id="blue-spawn-protection" min="39,23" max="53,9"/>
    </union>
    <cuboid id="red-spawn" min="-47,58,-17" max="-43,58,-13"/>
    <cuboid id="blue-spawn" min="44,58,14" max="48,58,18"/>
    <cuboid id="obs-spawn" min="-8,70,99" max="8,70,112"/>
    <cylinder id="hill" base="0.5,71,0.5" radius="5.5" height="5"/>
    <cuboid id="hill-progess" min="-5,71,-5" max="6,72,6"/>
    <rectangle id="playable" min="-61,-61" max="62,62"/>
    <!-- Applications -->
    <apply region="hill" block="never"/>
    <apply region="spawn-protections" block="never" message="You may not modify the spawns."/>
    <apply region="red-spawn-protection" enter="red-team" message="You may not enter the enemy team's spawn"/>
    <apply region="blue-spawn-protection" enter="blue-team" message="You may not enter the enemy team's spawn"/>
</regions>
<!-- Tool Repair -->
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>stone pickaxe</tool>
</toolrepair>
<!-- Item Keep -->
<itemkeep>
    <item>arrow</item>
    <item>golden apple</item>
    <item>glass</item>
</itemkeep>
<!-- Item Remove -->
<itemremove>
    <item>gold helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>potion</item>
    <item>374</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="16">arrow</item>
    <kill-reward>
</kill-rewards>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>120</maxbuildheight>
</map>