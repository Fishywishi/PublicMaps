<map proto="1.5.0">
<name>Quadrata</name>
<version>1.0.0</version>
<objective>Capture the wool!</objective>
<gamemode>ctw</gamemode>
<created>2025-05-09</created>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="571c1d9d-4d49-43bd-bfdb-30563e920ca9"/> <!-- Wesdial -->
</authors>
<teams>
    <team id="red-team" color="dark red" max="8">Red</team>
    <team id="blue-team" color="blue" max="8">Blue</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="main-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow" enchantment="infinity"/>
            <enchantment>infinity</enchantment>
        <item slot="2" unbreakable="true" material="diamond pickaxe"/>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="4" amount="64" material="wood"/>
        <item slot="5" material="stained glass" amount="64" team-color="true"/>
        <item slot="6" material="bucket"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" amount="1" material="arrow"/>
        <item slot="30" unbreakable="true" material="shears"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="iron leggings" enchantment="projectile_protection">
            <enchantment>protection projectile</enchantment>
        </leggings>
        <boots unbreakable="true" team-color="true" material="leather boots"/>
        <effect duration="3" amplifier="255">damage resistance</effect>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="red-team" kit="main-kit" yaw="-180">
        <region>
            <point>0.5,7,62.5</point>
        </region>
    </spawn>
    <spawn team="blue-team" kit="main-kit">
        <region>
            <point>0.5,7,-61.5</point>
        </region>
    </spawn>
    <default>
        <regions>
            <cylinder base="48,44,0" height="0" radius="1" yaw="90"/>
        </regions>
    </default>
</spawns>
<!-- Filters -->
<filters>
    <all id="only-iron-regen">
        <cause>world</cause>
    </all>
    <material id="only-iron">iron block</material>
</filters>
<!-- Wools -->
<wools>
    <wool team="blue-team" color="lime" location="45.5,10.5,63.5">
        <monument>
            <block>2,8,-63</block>
        </monument>
    </wool>
    <wool team="blue-team" color="yellow" location="-44.5,10.5,63.5">
        <monument>
            <block>-2,8,-63</block>
        </monument>
    </wool>
    <wool team="red-team" color="orange" location="-44.5,10.5,-62.5">
        <monument>
            <block>-2,8,63</block>
        </monument>
    </wool>
    <wool team="red-team" color="pink" location="45.5,10.5,-62.5">
        <monument>
            <block>2,8,63</block>
        </monument>
    </wool>
</wools>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="spawn-protections">
        <rectangle id="red-spawn" min="-10,43" max="10,65"/>
        <rectangle id="blue-spawn" min="10,-43" max="-10,-65"/>
    </union>
    <rectangle id="pink-woolroom" min="39,-57" max="47,-69"/>
    <rectangle id="orange-woolroom" min="-39,-67" max="-47,-59"/>
    <rectangle id="yellow-woolroom" min="-39,57" max="-47,69"/>
    <rectangle id="lime-woolroom" min="39,67" max="47,59"/>
    <!-- Applications -->
    <apply block-break="only-iron" block-place="only-iron-regen" message="You may only modify iron blocks in spawn!" region="spawn-protections"/>
    <!-- Red Team -->
    <apply block="red-team" message="You may not edit your own wool room!" region="pink-woolroom"/>
    <apply block="red-team" message="You may not edit your own wool room!" region="orange-woolroom"/>
    <apply enter="red-team" message="You may not enter your own wool room!" region="pink-woolroom"/>
    <apply enter="red-team" message="You may not enter your own wool room!" region="orange-woolroom"/>
    <apply enter="red-team" message="You may not enter the enemy's spawn!" region="red-spawn"/>
    <!-- Blue Team -->
    <apply block="blue-team" message="You may not edit your own wool room!" region="yellow-woolroom"/>
    <apply block="blue-team" message="You may not edit your own wool room!" region="lime-woolroom"/>
    <apply enter="blue-team" message="You may not enter your own wool room!" region="yellow-woolroom"/>
    <apply enter="blue-team" message="You may not enter your own wool room!" region="lime-woolroom"/>
    <apply enter="blue-team" message="You may not enter the enemy's spawn!" region="blue-spawn"/>
    <apply block="never" message="You may not edit spawn!" region="spawn-protections"/>
    <apply block="deny(void)" message="You may not edit the void!"/> <!-- uses block 36 -->
</regions>
<!-- Renewables -->
<renewables>
    <renewable interval="5" particles="false" sound="false" region="spawn-protections" renew-filter="only-iron"/>
</renewables>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>iron leggings</item>
    <item>leather boots</item>
    <item>water bucket</item>
    <item>emerald block</item>
    <item>beacon</item>
</itemremove>
<itemkeep>
    <item>arrow</item>
    <item>wood</item>
    <item>glass</item>
    <item>golden apple</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item material="wood" amount="16"/>
        <item material="stained glass" amount="16" team-color="true"/>
    </kill-reward>
</kill-rewards>
<maxbuildheight>30</maxbuildheight>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>