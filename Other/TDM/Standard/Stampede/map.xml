    <author uuid="08724344-a5af-4283-99fa-5a7bfb39b137"/> <!-- OllieGamerz -->
</authors>
<teams>
    <team id="red" color="dark red" max="24">Red</team>
    <team id="blue" color="blue" max="24">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" amount="32" material="bread"/>
        <item slot="3" material="golden apple"/>
        <item slot="8" amount="16" material="arrow"/>
        <helmet team-color="true" material="leather helmet"/>
        <chestplate team-color="true" material="leather chestplate"/>
        <leggings team-color="true" material="leather leggings"/>
        <boots team-color="true" material="leather boots"/>
        <effect duration="3">heal</effect>
        <effect duration="5">damage resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<spawns>
    <default>
        <regions>
            <cylinder base="-53.5,31,6.5" radius="1" height="0"/>
        </regions>
    </default>
    <spawn team="red" kit="spawn-kit" yaw="180">
        <regions>
            <cuboid min="-54,26,115" max="-53,25,114"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="spawn-kit">
        <regions>
            <cuboid min="-53,25,-65" max="-54,26,-66"/>
        </regions>
    </spawn>
</spawns>
<regions>
    <apply block="never"/>
</regions>
<time>10m</time>
<score>
    <kills>1</kills>
</score>
<itemremove>
    <item>bread</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather boots</item>
    <item>leather leggings</item>
    <item>golden apple</item>
    <item>arrow</item>
</itemremove>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
    	<item amount="8" material="arrow"/>
    </kill-reward>
</kill-rewards>
