<map proto="1.5.0">
<name>Atom</name>
<version>1.1.0</version>
<include id="gapple-kill-reward"/>
<objective>Be the team with the most kills after 7 minutes!</objective>
<time result="score">7m</time>
<gamemode>tdm</gamemode>
<authors>
    <author uuid="e5eea785-51c1-40fe-a2d0-f83d4c035cd9"/> <!-- pikpikmerchant -->
</authors>
<contributors>
    <contributor uuid="e1e9e6af-f826-44ce-b1e2-5efb4e5c5d9e" contribution="XML"/> <!-- zemphon -->
    <contributor uuid="f28e28cd-5e24-4e23-94a5-32dbb1daef34" contribution="Placed one block"/> <!-- raysohn -->
</contributors>
<teams>
    <team id="green-team" color="green" max="16">Green</team>
    <team id="pink-team" color="light purple" max="16">Pink</team>
</teams>
<kits>
    <kit id="spawn-kit" force="true">
        <clear/>
        <item unbreakable="true" slot="0">stone sword</item>
        <item unbreakable="true" slot="1" enchantment="arrow infinite:1">bow</item>
        <item slot="28" amount="1">arrow</item>
        <item slot="2" amount="2">TNT</item>
        <item slot="3">golden apple</item>
        <item slot="4" name="TNT Defuser" lore="`7Right click to defuse TNT">shears</item>
        <helmet team-color="true" unbreakable="true">leather helmet</helmet>
        <chestplate enchantment="protection explosions:3" unbreakable="true">leather chestplate</chestplate>
        <leggings team-color="true" unbreakable="true">leather leggings</leggings>
        <boots team-color="true" unbreakable="true" enchantment="protection fall:2">leather boots</boots>
        <effect duration="4" amplifier="5">damage resistance</effect>
        <effect duration="4" amplifier="5">heal</effect>
    </kit>
</kits>
<spawns>
    <spawn team="green-team" kit="spawn-kit" yaw="0">
        <region>
            <cylinder base="7.5,7,-57.5" radius="1" height="0"/>
        </region>
    </spawn>
    <spawn team="pink-team" kit="spawn-kit" yaw="180">
        <region>
            <cylinder base="-6.5,7,58.5" radius="1" height="0"/>
        </region>
    </spawn>
    <default yaw="90">
        <region>
            <cylinder base="0.5,40,0.5" radius="1" height="0"/>
        </region>
    </default>
</spawns>
<!-- Filters -->
<filters>
    <material id="only-tnt">tnt</material>
</filters>
<regions>
    <apply block="never" message="You may not break or place TNT blocks near spawn!">
        <region>
            <union>
                <cylinder base="-7,6,58" radius="10" height="oo"/>
                <cylinder base="7,6,-58" radius="10" height="oo"/>
            </union>
        </region>
    </apply>
    <apply block-place="only-tnt" block-break="never" message="You may only modify TNT in this map!">
        <region>
            <rectangle min="-10,62" max="10,-62"/>
        </region>
    </apply>
</regions>
<!-- Tool Repair -->
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>shears</tool>
</toolrepair>
<!-- Item Keep -->
<itemkeep>
    <item>arrow</item>
    <item>golden apple</item>
    <item>tnt</item>
</itemkeep>
<!-- Item Remove -->
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
</itemremove>
<!-- Misc -->
<tnt>
    <instantignite>on</instantignite>
    <licensing>off</licensing>
    <friendly-defuse>off</friendly-defuse>
    <blockdamage>off</blockdamage>
    <power>2</power>
    <fuse>2s</fuse>
</tnt>
<timelock>on</timelock>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>